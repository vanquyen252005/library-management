<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.student.EditProfileController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Main Container -->
    <VBox spacing="20" alignment="TOP_CENTER" layoutX="20.0" layoutY="20.0" prefWidth="560.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">

        <!-- Header -->
        <Label text="Edit Profile" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <!-- Form Fields -->
        <GridPane hgap="10" vgap="15" alignment="CENTER">
            <Label text="Username:" />
            <TextField fx:id="usernameField" promptText="Enter username" GridPane.columnIndex="1" />

            <Label text="Name:" GridPane.rowIndex="1" />
            <TextField fx:id="nameField" promptText="Enter full name" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Phone:" GridPane.rowIndex="2" />
            <TextField fx:id="phoneField" promptText="Enter phone number" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="ClassName:" GridPane.rowIndex="4" />
            <TextField fx:id="classField" promptText="Enter class name" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        </GridPane>

        <!-- Action Buttons -->
        <HBox spacing="15" alignment="CENTER">
            <Button text="Save" fx:id="saveButton" style="-fx-background-color: #2a5885; -fx-text-fill: white; -fx-font-weight: bold;" onAction="#SaveProfile" />
            <Button text="Cancel" fx:id="cancelButton" style="-fx-background-color: #888; -fx-text-fill: white;" onAction="#back"/>
        </HBox>
    </VBox>
</AnchorPane>
