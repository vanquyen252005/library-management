<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mainscene.BookDetailController">

    <!-- Book Image -->
    <ImageView fx:id="bookImageView" fitHeight="279.0" fitWidth="323.0" layoutX="212.0" layoutY="166.0" />

    <!-- Title Label -->
    <Label fx:id="titleLabel" layoutX="373.0" layoutY="103.0" prefHeight="50.0" prefWidth="200.0" text="title" />
    <Label fx:id="authorLabel" layoutX="633.0" layoutY="184.0" prefHeight="17.0" prefWidth="106.0" text="author" />
    <Label fx:id="publisherLabel" layoutX="632.0" layoutY="227.0" prefHeight="17.0" prefWidth="115.0" text="publisher" />
    <Label fx:id="yearLabel" layoutX="632.0" layoutY="276.0" prefHeight="17.0" prefWidth="100.0" text="year" />
    <Button fx:id="back_home" layoutX="51.0" layoutY="28.0" mnemonicParsing="false" onAction="#BackToHome" text="Back" />
    <Button fx:id="Borrow_book" layoutX="636.0" layoutY="337.0" mnemonicParsing="false" onAction="#ClickBorrowButton" text="Borrow" />
    <Button fx:id="BookQR" layoutX="963.0" layoutY="113.0" mnemonicParsing="false" onAction="#ClickBookQR" text="Book QR" />
    <ImageView fx:id="QRImageView" fitHeight="279.0" fitWidth="200.0" layoutX="894.0" layoutY="184.0" pickOnBounds="true" preserveRatio="true" />
    <ScrollPane layoutX="92.0" layoutY="476.0" prefHeight="287.0" prefWidth="987.0">
      <content>
         <AnchorPane fx:id="CommentView" prefHeight="286.0" prefWidth="970.0">
            <children>
               <TextField fx:id="CommentField" layoutX="164.0" layoutY="27.0" prefHeight="39.0" prefWidth="471.0" />
               <Button layoutX="684.0" layoutY="29.0" mnemonicParsing="false" onAction="#PostComment" prefHeight="35.0" prefWidth="77.0" text="Up" />
               <Label layoutX="45.0" layoutY="38.0" text="Post your comment" />
            </children>
         </AnchorPane>
      </content></ScrollPane>
   <Button fx:id="UndoRequestButton" layoutX="638.0" layoutY="387.0" mnemonicParsing="false" onAction="#clickUndoRequestButton" text="Undo request" visible="false" />

</AnchorPane>
